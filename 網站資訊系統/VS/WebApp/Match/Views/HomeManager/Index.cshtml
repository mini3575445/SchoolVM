@model Match.ViewModels.VMActivity

@{
    ViewBag.Title = "後臺首頁";
    Layout = "~/Views/Shared/_Layout_manager.cshtml";
}
<style>
    .jumbotron {
        background-image: url("/Photos/01.jpg");
        background-repeat: round;
    }

    .app {
        transition: all 0.3s ease;
        transform: scale(1);
    }

        .app:hover {
            transform: scale(1.08) perspective(1px);
        }


    .green:hover {
        background-color: #000;
        /*  Making button bigger on hover  */
    }
</style>

<div class="jumbotron text-white text-right">
    <h1 class="display-4 text-shadow" style="font-size:78px"><strong>Match</strong></h1>
    <h3 class="text-shadow">現在就來玩</h3>
    <hr>
    <div class="row d-flex justify-content-end">
        <div class="app"><img src="/Photos/appstore.png" width="170" /></div>
        <div class="ml-2 app"><img src="/Photos/googleplay.png" width="170" /></div>
    </div>

    <h5 class="p-2 rounded" style="color:#bbbbbb"><i class="bi bi-phone"></i> 立即下載</h5>
</div>

<h3>合作店家</h3>
<div id="carouselExampleCaptions" class="carousel slide mb-5" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/Photos/banner01.png" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="/Photos/banner02.png" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="/Photos/banner03.png" class="d-block w-100">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-target="#carouselExampleCaptions" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#carouselExampleCaptions" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </button>
</div>

<h3>最新活動</h3>
<div class="row d-flex justify-content-around p-3" style="border-radius: 5px; background-color: #cccccc;">
    @for (var i = 0; i <= 3; i++)
    {
        <a href="/UserActivity/Details/@Model.activity[i].activity_id" class="card-col-2 m-2 text-decoration-none text-black-50">
            <div class="card" style="width: 16rem; background-color: #eeeeee;">
                @if (Model.activity[i].Place.place_photo_file != null)
                {
                    <img src="~/PlacePhotos/@Model.activity[i].Place.place_photo_file" class="w-100">
                }
                else
                {
                    <img src="~/PlacePhotos/defaultPhoto.png" class="w-100">
                }
                <div class="card-body">
                    <h5 class="card-title text-primary text-center"><strong>@Html.DisplayFor(modelItem => Model.activity[i].activity_name)</strong></h5>
                    <hr />
                    <p class="card-text"><i class="bi bi-signpost-fill" style="font-size:1.5rem; line-height:1;"></i>@Html.DisplayFor(modelItem => Model.activity[i].Place.place_address)</p>
                    <p class="card-text"><i class="bi bi-calendar" style="font-size:1.5rem; line-height:1;"></i>@Html.DisplayFor(modelItem => Model.activity[i].activity_datetime)</p>
                    @*<p class="card-text text-right">@Html.DisplayFor(modelItem => a.Member.member_name)</p>*@
                    <div class="p-1 card-text" style="display:inline-block; border-radius:20px; background-color:#d0d0d0;">
                        @*路徑為空顯示預設圖片*@
                        @if (Model.activity[i].Member.member_photo_file != null)
                        {
                            <img src="~/MemberPhotos/@Model.activity[i].Member.member_photo_file" width="30" style="border-radius:30px;">
                        }
                        else
                        {
                            <img src="~/MemberPhotos/defaultPhoto.png" width="30" style="border-radius:30px;">
                        }
                        @Model.activity[i].Member.member_name
                    </div>
                </div>
            </div>
        </a>
    }
</div>



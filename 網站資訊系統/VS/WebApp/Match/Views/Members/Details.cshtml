@model Match.Models.Member

@{
    ViewBag.Title = "Details";
    Layout = "";
}

<div class="p-3">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>@Html.DisplayFor(model => model.member_name)</h3>
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-md-6">
                    @*路徑為空顯示預設圖片*@
                    @{
                        var photo = Model.member_photo_file == null ? "defaultPhoto.png" : Model.member_photo_file;
                    }
                    <img src="~/MemberPhotos/@photo" class="img-thumbnail" />
                </div>
                <div class="col-md-6 pt-2">
                    <h4>編號：@Html.DisplayFor(model => model.member_id)</h4>
                    <h4>帳號：@Html.DisplayFor(model => model.member_account)</h4>
                    <h4>姓名：@Html.DisplayFor(model => model.member_id_name)</h4>
                    <h4>性別：@(Model.member_gender ? "男" : "女")</h4>
                    <h4>生日：@Html.DisplayFor(model => model.member_birthday)</h4>
                    <h4>手機：@Html.DisplayFor(model => model.member_cellphone)</h4>
                    <h4>E-mail：@Html.DisplayFor(model => model.member_email)</h4>
                    <h4>地址：@Html.DisplayFor(model => model.member_address)</h4>
                    <h4>權限：@Html.DisplayFor(model => model.Right.right_name)</h4>
                    <h4>建立時間：@Html.DisplayFor(model => model.member_create_date)</h4>                    
                </div>
            </div>
        </div>
        <div class="card-footer text-right text-white">
            @Html.ActionLink("修改", "Edit", new { id = Model.member_id }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>


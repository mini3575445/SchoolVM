@model Match.Models.Activity

@{
    ViewBag.Title = "Details";
}
<div>
    <div class="row">
        <div class="col-6">
            @*路徑為空顯示預設圖片*@
            @if (Model.Place.place_photo_file != null)
            {
                <img src="~/PlacePhotos/@Model.Place.place_photo_file" width="400">
            }
            else
            {
                <img src="~/PlacePhotos/defaultPhoto.png" width="400">
            }
        </div>
        <div class="col-6">
            <div class="p-1" style="display:inline-block; border-radius:20px; background-color:#d0d0d0;">
                @*路徑為空顯示預設圖片*@
                @if (Model.Place.place_photo_file != null)
                {
                    <img src="~/MemberPhotos/@Model.Member.member_photo_file" width="30" style="border-radius:20px;">
                }
                else
                {
                    <img src="~/MemberPhotos/defaultPhoto.png" width="30" style="border-radius:20px;">
                }
                @Model.Member.member_name
            </div>
            <h1 class="text-danger">@Model.activity_name</h1><span>@Model.Activity_type.activity_type_name</span>
            <hr>
            <p><i class="bi bi-shop" style="font-size:1.5rem; line-height:1;"></i> @Html.DisplayNameFor(model => model.Place.shop_name):@Model.Place.shop_name</p>
            <p><i class="bi bi-signpost-fill" style="font-size:1.5rem; line-height:1;"></i> @Html.DisplayNameFor(model => model.Place.place_address):@Model.Place.place_address <a href="#">點我看地圖</a></p>
            <p><i class="bi bi-people-fill" style="font-size:1.5rem; line-height:1;"></i> 人數:@Model.activity_lower ~ @Model.activity_upper</p>
            <p><i class="bi bi-calendar" style="font-size:1.5rem; line-height:1;"></i> @Html.DisplayNameFor(model => model.activity_datetime):@Model.activity_datetime</p>
                        
            <a href="/UserActivity/JoinActivity/@Model.activity_id" class="btn btn-block btn-danger">加入活動</a>
        </div>
        <hr class="col-12">
        <div class="col-12">
            <h3>@Html.DisplayNameFor(model => model.activity_description)</h3>
            <p>@Model.activity_description</p>
        </div>
        <hr class="col-12">
        <div class="col-12">
            <h3>留言</h3>
        </div>
    </div>
    
</div>



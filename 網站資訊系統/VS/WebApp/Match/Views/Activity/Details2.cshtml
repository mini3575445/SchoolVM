@model Match.Models.Activity

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_manager.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Activity</h4>
    <hr />
    <div class="row">
        <div class="col-6">
            @*路徑為空顯示預設圖片*@
            @if (Model.Place.place_photo_file != null)
            {
                <img src="~/PlacePhotos/@Model.Place.place_photo_file" width="400">
            }
            else
            {
                <img src="~/PlacePhotos/defaultPhoto.png" width="400">
            }
        </div>
        <div class="col-6">
            <p>@Html.DisplayNameFor(model => model.Member.member_name):@Model.Member.member_name</p>
            <h1 class="text-danger">@Model.activity_name</h1>
            <h3>@Model.Activity_type.activity_type_name</h3>
            <hr>
            <img src="~/PlacePhotos/defaultPhoto.png" width="200">
            <p>@Html.DisplayNameFor(model => model.Place.shop_name):@Model.Place.shop_name</p>
            <p>@Html.DisplayNameFor(model => model.Place.place_address):@Model.Place.place_address</p> <a href="#">點我看地圖</a>
            <p>人數:@Model.activity_lower ~ @Model.activity_upper</p>
            <p>@Html.DisplayNameFor(model => model.activity_join_deadline):@Model.activity_join_deadline</p>
            <a href="#">加入活動</a>
        </div>
        <hr class="col-12">
        <div class="col-6">
            <h3>@Html.DisplayNameFor(model => model.activity_description)</h3>
            <p>@Model.activity_description</p>
        </div>
        <div class="col-6">
            <h3>留言</h3>
        </div>
    </div>
    
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.activity_id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

